{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": ["eslint:recommended"],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "jsx": true,
            "globalReturn": false
        }
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "no-console": "error",
        "func-names": "off",
        "no-underscore-dangle": "off",
        "consistent-return": "off",
        "jest/expect-expect": "off",
        "max-len": [
            "error", 
            {
              "code": 140, 
              "ignorePattern": "^import [^,]+ from |^export | implements"
            }
        ]
    }
}